extends layout

block content
  h1= title
  if locals.token
    p username: #{username}
      form(method="post", action="/logout")
        input(type="submit", value="Logout")
    form(method="post", action="/create_issue")
      input(type="text", name="title", placeholder="Add to list..")
      input(type="submit", value="Add item")
  if locals.issues
    p
      b Default list
    for issue in issues
      li= issue
  else
    a(href="/auth/github") sign in with github
